<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CodeUnityLabs</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app">

    <!-- TOP NAV -->
    <nav class="navbar navbar-dark bg-dark px-4">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            CodeUnityLabs
        </a>

        <div class="d-flex gap-3">
            <a class="nav-link text-light" asp-controller="Users" asp-action="Index">Users</a>
            <a class="nav-link text-light" asp-controller="Rezervations" asp-action="Index">Reservations</a>
            <a class="nav-link text-light" asp-controller="Resources" asp-action="Index">Resources</a>
            <a class="nav-link text-light" asp-controller="WaitingLists" asp-action="Index">Waiting List</a>
        </div>
    </nav>

    <!-- PAGE -->
    <main class="container page">
        <header class="page-header">
            <h1 class="page-title">@ViewData["Title"]</h1>
        </header>

        <section class="content-card">
            @RenderBody()
        </section>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
