@model CodeUnityLabs.Models.Resource

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3>@ViewData["Title"] Resource</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Resource_Id" />

                <div class="mb-3">
                    <label asp-for="Resource_Name"></label>
                    <input asp-for="Resource_Name" class="form-control" />
                    <span asp-validation-for="Resource_Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Resource_Type"></label>
                    <input asp-for="Resource_Type" class="form-control" />
                    <span asp-validation-for="Resource_Type" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Available" class="form-check-input" />
                    <label asp-for="Available" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
