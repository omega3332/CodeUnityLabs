@model IEnumerable<CodeUnityLabs.Models.Resource>

@{
    ViewData["Title"] = "Resources";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Resource_Name)</th>
                <th>@Html.DisplayNameFor(model => model.Resource_Type)</th>
                <th>@Html.DisplayNameFor(model => model.Available)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Resource_Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Resource_Type)</td>
                    <td>
                        @if (item.Available)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Resource_Id" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Resource_Id" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Resource_Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
