@model IEnumerable<CodeUnityLabs.Models.Resource>

@{
    ViewData["Title"] = "Resources";
}
@{
    var userType = Context.Session.GetInt32("UserTypeId") ?? 3; 
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        @if (userType == 1 || userType == 2 || userType == 3)
        {
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        }
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Resource_Name</td>
                    <td>@item.Resource_Type</td>
                    <td>@item.Quantity</td>
                    <td>
                        @if (item.Available && item.Quantity > 0)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">No</span>
                        }
                    </td>
                    <td>
                        @if (userType == 1 || userType == 2)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Resource_Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Resource_Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Resource_Id" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>