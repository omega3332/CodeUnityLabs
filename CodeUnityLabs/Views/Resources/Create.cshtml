@model CodeUnityLabs.Models.Resource

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3>@ViewData["Title"] Resource</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Resource_Name"></label>
                    <input asp-for="Resource_Name" class="form-control" />
                    <span asp-validation-for="Resource_Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Resource_Type"></label>
                    <input asp-for="Resource_Type" class="form-control" />
                    <span asp-validation-for="Resource_Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input asp-for="Quantity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <!-- Remove the manual Available checkbox -->
                <!-- Available will be calculated automatically: Available = Quantity > 0 -->
                @* Only Admin/Staff can create *@
                @if (ViewBag.UserTypeId == 1 || ViewBag.UserTypeId == 2)
                {
                    <button type="submit" class="btn btn-success">Create</button>
                }
                else
                {
                    <p class="text-danger">You do not have permission to create resources.</p>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}