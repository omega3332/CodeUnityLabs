@model CodeUnityLabs.Models.WaitingList

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Waiting_Id" />

    <div class="mb-3">
        <label asp-for="User_Id"></label>
        <select asp-for="User_Id" class="form-select" asp-items="ViewBag.Users">
            <option value="">Select User</option>
        </select>
        <span asp-validation-for="User_Id" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Requested_At"></label>
        <input asp-for="Requested_At" type="datetime-local" class="form-control" />
        <span asp-validation-for="Requested_At" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Priority"></label>
        <input asp-for="Priority" type="number" class="form-control" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}