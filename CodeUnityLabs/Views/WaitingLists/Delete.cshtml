@model CodeUnityLabs.Models.WaitingList

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="content-card">
        <h3>Are you sure you want to delete this entry?</h3>
        <hr />

        <dl class="row mb-4">
            <dt class="col-sm-3">User Id</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.User_Id)</dd>

            <dt class="col-sm-3">Requested At</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Requested_At)</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Status)</dd>

            <dt class="col-sm-3">Priority</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Priority)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Waiting_Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>
