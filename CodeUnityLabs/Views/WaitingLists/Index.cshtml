@model IEnumerable<CodeUnityLabs.Models.WaitingList>

@{
    ViewData["Title"] = "Waiting List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        @if (ViewBag.UserTypeId == 1 || ViewBag.UserTypeId == 2 || ViewBag.UserTypeId == 3)
        {
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        }
    </div>

    <div class="content-card table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark text-white">
                <tr>
                    <th>User</th>
                    <th>Requested At</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User?.Name</td>
                        <td>@item.Requested_At.ToString("g")</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Status) && item.Status.Equals("Active", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-success">@item.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>@item.Priority</td>
                        <td>
                            @if (ViewBag.UserTypeId == 1 || ViewBag.UserTypeId == 2)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Waiting_Id" class="btn btn-sm btn-warning me-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Waiting_Id" class="btn btn-sm btn-danger">Delete</a>
                            }
                            <a asp-action="Details" asp-route-id="@item.Waiting_Id" class="btn btn-sm btn-info me-1">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
